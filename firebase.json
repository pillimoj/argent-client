{
    "hosting": {
        "public": "dist",
        "ignore": [
            ".firebaserc",
            "firebase.json",
            ".git",
            "README.md"
        ],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "argent",
                    "region": "europe-west1"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}